def fetch_complaints(self):
    try:
        cursor = self.conn.cursor()
        # Fetching the ID along with name, gender, and description to facilitate deletion
        cursor.execute("SELECT id, name, gender, description FROM complaints")
        rows = cursor.fetchall()
        # Include the complaint ID in the dictionary to be used for identifying records
        return [{"id": row[0], "name": row[1], "gender": row[2], "description": row[3]} for row in rows]
    except Exception as e:
        print(f"Error fetching complaints: {e}")
        return []
